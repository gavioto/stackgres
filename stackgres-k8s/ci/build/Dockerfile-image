ARG SOURCE_IMAGE_NAME
ARG BASE_IMAGE

FROM "$SOURCE_IMAGE_NAME" as source
  USER root
  RUN mkdir -p /project/stackgres-k8s/src/
  ARG UID
  RUN chown "$UID:$UID" /project /project/stackgres-k8s /project/stackgres-k8s/src
  USER $UID
  ARG MODULE_PATH
  COPY --chown="$UID:$UID" "./$MODULE_PATH/docker/" "/project/stackgres-k8s/src/$MODULE_PATH/docker/"
