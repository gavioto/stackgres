ARG SOURCE_IMAGE_NAME

FROM "$SOURCE_IMAGE_NAME" as source
  USER root
  RUN mkdir -p /project/stackgres-k8s/src/
  ARG UID
  RUN chown "$UID:$UID" /project /project/stackgres-k8s /project/stackgres-k8s/src
  USER $UID

FROM node:14.17 as build
  USER root
  RUN mkdir -p /project/
  ARG UID
  RUN chown "$UID:$UID" /project
  USER $UID
  COPY --chown="$UID:$UID" . /project/.
  WORKDIR /project
  COPY --from=source /project/ .
  USER root
  ARG BUILD_COMMANDS
  ARG SHELL_XTRACE
  RUN sh -ec $SHELL_XTRACE "$BUILD_COMMANDS"
  USER $UID
  ARG IMAGE_NAME
  LABEL build-of=$IMAGE_NAME

FROM "$SOURCE_IMAGE_NAME" as package
  ARG UID
  USER $UID
  WORKDIR /project
